{
  "manifest_version": 2,

  "name": "YT Ad Killer",
  "description": "This extension does nothing yet",
  "version": "1.0",
  "icons": {
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "tabs", "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["popup.js"],
      "run_at": "document_end"
    }
  ]
}